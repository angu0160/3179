  },
  "layer": [
    {
      "mark": {"type": "arc", "innerRadius": 100},
      "encoding": {
        "theta": {"field": "value", "type": "quantitative"},
        "color": {
          "field": "category",
          "type": "nominal",
          "scale": {
            "domain": [
              "Greek",
              "Italian",
              "Arabic",
              "Punjabi",
              "Vietnamese",
              "Mandarin",
              "Cantonese"
            ],
            "range": [
              "#7fc97f",
              "#beaed4",
              "#fdc086",
              "#ffff99",
              "#386cb0",
              "#f0027f",
              "#bf5b17"
            ]
          },
          "legend": {"title": "Langauges"}
        },
        "tooltip": [
          {"field": "category", "type": "nominal", "title": "Language"},
          {
            "field": "value",
            "type": "quantitative",
            "aggregate": "sum",
            "title": "Number of speakers",
            "format": ","
          }
        ]
      }
    }
  ],
  "config": {}
}