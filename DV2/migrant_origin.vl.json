{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 960,
  "height": 600,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },

  "params": [
    {
      "name": "countrySel",
      "value": null,
      "bind": {
        "input": "select",
        "options": [null, "Top20Countries"],
        "labels": ["Show all", "Top 20 Countries"],
        "name": "Countries of Origins: "
      }
    }
  ],

  "transform": [
    {
      "lookup": "properties.ISO_A3",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/angu0160/3179/main/DV2/data/abs_cob_2024.csv"
        },
        "key": "alpha_3",
        "fields": ["Country", "Count_2024", "Share_OB"]
      }
    },
    {"calculate": "round(datum.Share_OB * 10000) / 10000", "as": "Share_OB_rounded"},
    {"calculate": "toNumber(datum.Count_2024)", "as": "Count_2024_num"}
  ],

  "mark": {"type": "geoshape", "stroke": "#b7c7d6", "strokeWidth": 0.6},

  "encoding": {
    "color": {
      "condition": {
        "test": "countrySel == null || (countrySel == 'Top20Countries' && indexof(['India','China','New Zealand','United Kingdom','Philippines','Vietnam','Italy','South Africa','Sri Lanka','Malaysia','Nepal','Germany','United States of America','Thailand','Ireland','Hong Kong','Iraq','Pakistan','Indonesia','South Korea'], datum.Country) >= 0)",
        "field": "Count_2024_num",
        "type": "quantitative",
        "scale": {
          "type": "threshold",
          "domain": [1, 100, 1000, 10000, 100000, 500000, 1000000],
          "range": ["#fff5eb", "#fee6ce", "#fdd0a2", "#fdae6b", "#fd8d3c", "#f16913", "#d94801", "#8c2d04"]
        },
        "title": "Number of Migrants to Australia",
        "legend": {"format": ",", "labelFontSize": 10, "titleFontSize": 11}
      },
      "value": "#e5e7eb"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Count_2024_num", "type": "quantitative", "title": "No. of migrants", "format": ","},
      {"field": "Share_OB_rounded", "type": "quantitative", "title": "% of Total migrants"}
    ]
  },

  "config": {}
}