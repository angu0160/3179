{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Migration Stream into Australia 2023-24",
  "width": 250,
  "height": 250,

  "data": {
    "values": [
      {"category": "Skill Stream", "value": 137100},
      {"category": "Family Stream", "value": 52720},
      {"category": "Special Eligibility Stream", "value": 180}
    ]
  },

  "params": [
    {
      "name": "stream_highlight",
      "select": { "type": "point", "fields": ["category"] },
      "bind": "legend"
    }
  ],

  "layer": [
    {
      "mark": { "type": "arc", "innerRadius": 100, "cornerRadius": 5},
      "encoding": {
        "theta": { "field": "value", "type": "quantitative" },
        "color": {
          "field": "category",
          "type": "nominal",
          "scale": {
            "domain": ["Skill Stream", "Family Stream", "Special Eligibility Stream"],
            "range": ["#d95f02", "#1b9e77", "#7570b3"]
          },
          "legend": {
          "title": "Streams",
          "labelFontSize": 10,
          "titleFontSize": 12
          }
        },
        "opacity": {
          "condition": { "param": "stream_highlight", "value": 1 },
          "value": 0.25
        },
        "tooltip": [
          { "field": "category", "type": "nominal", "title": "Stream" },
          { "field": "value", "type": "quantitative", "title": "Number of applicants", "format": "," }
        ]
      }
    }
  ],

  "config": {}
}