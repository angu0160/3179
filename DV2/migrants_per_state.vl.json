{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": "Migrant in each state by year",
  "width": 600,
  "height": 350,
  "data": {
    "url": "https://raw.githubusercontent.com/angu0160/3179/main/DV2/data/migration%20by%20state.csv"
  },
  "params": [
    {
      "name": "stateSel",
      "bind": {
        "input": "select",
        "options": [
          null,
          "New South Wales",
          "Victoria",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory"
        ],
        "labels": [
          "Show all",
          "New South Wales",
          "Victoria",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory"
        ],
        "name": "Select State/Territory: "
      }
    }
  ],
  "transform": [
    {"filter": "stateSel == null || datum['State/Territory'] == stateSel"}
  ],
  "layer": [
    {
      "mark": {
        "type":"area",
        "interpolate": "monotone",
        "opacity": 0.9,
        "stroke": "white",
        "strokeWidth": 0.6
      },
      "encoding": {
        "x": {
          "timeUnit": "year",
          "field": "Year",
          "type": "temporal",
          "axis": {"format": "%Y", "title": "Year"},
          "scale":{
            "domain": [ { "year": 2004 }, { "year": 2023 } ],
          "nice": false
          }
        },
        "y": {
          "aggregate": "sum",
          "field": "Migrants",
          "type": "quantitative",
          "title": "Number of Migrants"
        },
        "color": {
          "field": "State/Territory",
          "type": "nominal",
          "scale": {"scheme": "tableau10"},
          "title": "State/Territory"
        },
        "tooltip": [
          {
            "field": "Year",
            "type": "temporal",
            "timeUnit": "year",
            "title": "Year",
            "format": "%Y"
          },
          {
            "field": "State/Territory",
            "type": "nominal",
            "title": "State/Territory"
          },
          {
            "field": "Migrants",
            "type": "quantitative",
            "aggregate": "sum",
            "title": "Migrants",
            "format": ","
          }
        ]
      }
    },
     {
    "data": { "values": [ { "date": "2020-01-01" } ] },
    "mark": { "type": "rule", "strokeDash": [5, 5], "color": "#f80202", "strokeWidth": 1.5 },
    "encoding": {
      "x": { "field": "date", "type": "temporal", "timeUnit": "year" }
    }
  },
  {
    "data": { "values": [ { "date": "2020-01-01", "label": "COVID-19 border closures" } ] },
    "mark": {
      "type": "text",
      "align": "right",
      "dx": -7,
      "dy": 25,
      "fontSize": 12,
      "fontWeight": "bold",
      "color": "#f80202"
    },
    "encoding": {
      "x": { "field": "date", "type": "temporal", "timeUnit": "year" },
      "y": { "value": 0 },
      "text": { "field": "label" }
    }
  }
  ],
  "config": {}
}